extends layout

block head
  link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700;400&display=swap")
  style.
    body {
      background: linear-gradient(120deg, #e0e7ff 0%, #f9fafb 100%);
      min-height: 100vh;
      font-family: 'Montserrat', 'Segoe UI', 'Hiragino Sans', Arial, sans-serif;
    }
    .library-container {
      max-width: 540px;
      margin: 48px auto;
      padding: 40px 32px 32px 32px;
      background: none;
      border-radius: 0;
      box-shadow: none;
      border: none;
      position: relative;
      overflow: visible;
    }
    .library-title {
      font-size: 2.7rem;
      font-weight: 700;
      color: #3730a3;
      margin-bottom: 10px;
      letter-spacing: 1.5px;
      text-align: center;
      font-family: 'Montserrat', 'Segoe UI', 'Hiragino Sans', Arial, sans-serif;
      position: relative;
      z-index: 1;
      text-shadow: 0 2px 12px #e0e7ff;
    }
    .library-desc {
      color: #6366f1;
      font-size: 1.13rem;
      margin-bottom: 34px;
      text-align: center;
      font-weight: 500;
      z-index: 1;
      position: relative;
    }
    .library-section-title {
      font-size: 1.25rem;
      color: #6366f1;
      margin-top: 28px;
      margin-bottom: 14px;
      font-weight: 700;
      letter-spacing: 0.7px;
      text-transform: uppercase;
      z-index: 1;
      position: relative;
    }
    .library-list {
      list-style: none;
      padding: 0;
      margin: 0;
      z-index: 1;
      position: relative;
    }
    .library-list li {
      background: rgba(240,245,255,0.7);
      margin-bottom: 14px;
      padding: 18px 22px;
      border-radius: 18px;
      box-shadow: 0 2px 12px rgba(99,102,241,0.07);
      display: flex;
      align-items: center;
      font-size: 1.13rem;
      transition: transform 0.13s, box-shadow 0.13s;
      border-left: none;
      position: relative;
      backdrop-filter: blur(1px);
    }
    .library-list li:hover {
      transform: translateY(-2px) scale(1.025);
      box-shadow: 0 6px 18px rgba(99,102,241,0.13);
      background: rgba(226,232,255,0.85);
    }
    .library-list strong {
      color: #3730a3;
      margin-right: 12px;
      min-width: 120px;
      display: inline-block;
      font-weight: 700;
      letter-spacing: 0.5px;
    }

block content
  .library-container
    h1.library-title= title
    p.library-desc LocalLibrary へようこそ。これは、Mozilla Developer Network のチュートリアル例として開発された、非常に基本的なウェブサイトです。

    h2.library-section-title コンテンツ

    p 図書館には以下のそれぞれの数のコンテンツがあります

    ul.library-list
      li #[strong 書籍:] !{typeof book_count !== 'undefined' ? book_count : 0}
      li #[strong コピー:] !{typeof book_instance_count !== 'undefined' ? book_instance_count : 0}
      li #[strong コピー入手可能:] !{typeof book_instance_available_count !== 'undefined' ? book_instance_available_count : 0}
      li #[strong 著者:] !{typeof author_count !== 'undefined' ? author_count : 0}
      li #[strong ジャンル:] !{typeof genre_count !== 'undefined' ? genre_count : 0}
